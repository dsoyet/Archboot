install ()
{
    MODULES=""
    BINARIES="capiinfo rcapid capiinit avmcapictrl"
    FILES=""
    SCRIPT=""
    for i in $(find /usr/lib/pppd ! -type d); do
	add_file "$i"
    done
    add_file "/etc/rc.d/capiinit"
    add_file "/etc/archboot/etc/capi4k/capi.conf" "/etc/capi.conf"
}

help ()
{
cat<<HELPEOF
  This hook includes capi4k-utils on an arch boot image.
HELPEOF
} 
