install ()
{
    MODULES=""
    BINARIES="lsusb"
    FILES=""
    SCRIPT=""
    add_file "/usr/share/usbutils/usb.ids.gz"
    add_file "/usr/sbin/update-usbids"
}

help ()
{
cat<<HELPEOF
  This hook includes usbutils on an arch boot image.
HELPEOF
} 
