# vim: set ft=sh:
run_hook ()
{
    # mount tmpfs, else autodetection will fail!
    mount -n -t tmpfs udev /dev -o mode=0755,size=10M,nosuid
    # Copy static device nodes to /dev
    cp -a /lib/udev/devices/* /dev/
    echo > /proc/sys/kernel/hotplug
    msg -n ":: Starting udevd..."
    /sbin/udevd --daemon
    msg "done."
}
