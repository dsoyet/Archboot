install ()
{
    ### generate boot.msg
    [ -s "${APPENDBOOTMESSAGE}" ] && cat ${APPENDBOOTMESSAGE} >> ${BOOTMESSAGE}
    [ -s "${APPENDOPTIONSBOOTMESSAGE}" ] && cat ${APPENDOPTIONSBOOTMESSAGE} >> ${OPTIONSBOOTMESSAGE}
}

help ()
{
cat <<HELPEOF
  This hook sets up dynamically the boot message, depending on
  your system.
HELPEOF
}