# Created by Tobias Powalowski <tpowa@archlinux.org>

install ()
{
    MODULES=""
    BINARIES="clamscan freshclam"
    FILES=""
    SCRIPT="arch_clamav"
    # add /var directories
    add_dir "/var/run/clamav"
    add_dir "/var/lib/"
    add_dir "/var/log/clamav"
    add_file "/usr/share/archboot/clamav/etc/clamav/freshclam.conf" "/etc/clamav/freshclam.conf"
    # add unrar support
    add_file "/usr/lib/libclamunrar.so"
    add_file "/usr/lib/libclamunrar.so.6"
    add_file "/usr/lib/libclamunrar.so.6.0.4"
    add_file "/usr/lib/libclamunrar_iface.so"
    add_file "/usr/lib/libclamunrar_iface.so.6"
    add_file "/usr/lib/libclamunrar_iface.so.6.0.4"
}

help ()
{
cat<<HELPEOF
  This hook includes clamav on an arch boot image.
HELPEOF
} 
