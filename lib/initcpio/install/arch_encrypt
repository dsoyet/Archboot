install ()
{
    MODULES=" $(all_modules "/crypto/" | grep -v "aes.ko" ) cryptoloop"
    BINARIES="cryptsetup"
    FILES=""
    SCRIPT="arch_encrypt"
    # fix licenses
    add_file "/usr/share/licenses/popt/LICENSE"
}

help ()
{
cat<<HELPEOF
  This hook allows for an encrypted root device on an arch boot image.
  It depends on arch_devicemapper hook.
HELPEOF
}
