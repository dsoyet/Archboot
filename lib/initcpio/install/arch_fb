install ()
{
    MODULES=" $(checked_modules "/video/" | grep 'fb')"

    BINARIES="v86d"
    FILES=""
    SCRIPT=""
    add_file /usr/share/archboot/fb/etc/modprobe.d/uvesafb
}

help ()
{
cat<<HELPEOF
  This hook includes the framebuffer subsystem on an arch boot image.
HELPEOF
}
