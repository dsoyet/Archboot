# Created by Tobias Powalowski <tpowa@archlinux.org>

install ()
{
    MODULES="checked_modules "drivers/md/dm-*""
    BINARIES="lvm fsadm lvmdump"
    FILES=""
    SCRIPT="arch_lvm2"

    add_dir "/dev/mapper"
}

help ()
{
cat<<HELPEOF
  This hook loads the necessary modules for an LVM2 root device 
  on an arch boot image.
HELPEOF
}
