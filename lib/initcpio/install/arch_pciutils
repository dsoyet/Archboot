build ()
{
    MODULES=""
    BINARIES="/usr/sbin/lspci /usr/sbin/setpci /usr/sbin/update-pciids"
    FILES=""
    SCRIPT=""
    add_file "/usr/share/hwdata/pci.ids"
}

help ()
{
cat<<HELPEOF
  This hook includes pciutils on an arch boot image.
HELPEOF
} 
