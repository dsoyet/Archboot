install ()
{
    MODULES=""
    BINARIES="lspci setpci update-pciids"
    FILES=""
    SCRIPT=""
    add_file "/usr/share/hwdata/pci.ids"
    add_file "/usr/sbin/update-pciids"
}

help ()
{
cat<<HELPEOF
  This hook includes pciutils on an arch boot image.
HELPEOF
} 
