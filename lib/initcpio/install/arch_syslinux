install ()
{
    MODULES=""
    BINARIES="syslinux extlinux mtools mcopy mattrib"
    FILES=""
    SCRIPT=""
    for i in /usr/lib/syslinux/*; do
        [ -e $i ] && add_file "$i"
    done
    add_file "/usr/lib/gconv/gconv-modules"
    add_file "/usr/lib/gconv/IBM850.so"
}

help ()
{
cat<<HELPEOF
  This hook includes syslinux on an arch boot image.
HELPEOF
} 
