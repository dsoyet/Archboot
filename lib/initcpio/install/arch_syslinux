install ()
{
    MODULES=""
    BINARIES="syslinux mtools mcopy mattrib"
    FILES=""
    SCRIPT=""
    add_file "/usr/lib/syslinux/mbr.bin"
    add_file "/usr/lib/gconv/gconv-modules"
    add_file "/usr/lib/gconv/IBM850.so"
}

help ()
{
cat<<HELPEOF
  This hook includes syslinux on an arch boot image.
HELPEOF
} 
