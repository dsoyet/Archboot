# Created by Tobias Powalowski <tpowa@archlinux.org>

build ()
{
    MODULES=""
    BINARIES="/usr/bin/capiinfo /usr/sbin/rcapid /usr/sbin/capiinit /usr/sbin/avmcapictrl"
    FILES=""
    SCRIPT=""
    for i in $(find /usr/lib/pppd ! -type d); do
	add_file "$i"
    done
    add_file "/etc/rc.d/capiinit"
    add_file "/usr/share/archboot/capi4k/etc/capi.conf" "/etc/capi.conf"
}

help ()
{
cat<<HELPEOF
  This hook includes capi4k-utils on an arch boot image.
HELPEOF
} 
