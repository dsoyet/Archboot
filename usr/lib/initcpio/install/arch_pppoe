#!/bin/bash
# Created by Tobias Powalowski <tpowa@archlinux.org>

build ()
{
    apps="/usr/bin/pppoe /usr/bin/pppoe-connect /usr/bin/pppoe-relay /usr/bin/pppoe-server \
          /usr/bin/pppoe-setup /usr/bin/pppoe-sniff /usr/bin/pppoe-start /usr/bin/pppoe-status \
	  /usr/bin/pppoe-stop"
    for i in $apps; do
        add_binary "$i"
    done
    add_full_dir "/usr/lib/rp-pppoe"
}

help ()
{
cat<<HELPEOF
  This hook includes rp-pppoe on an arch boot image.
HELPEOF
} 
