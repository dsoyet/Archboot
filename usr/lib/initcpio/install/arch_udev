# Created by Tobias Powalowski <tpowa@archlinux.org>

build ()
{
    MODULES=""
    BINARIES="/usr/bin/logger"
    FILES="/etc/udev/udev.conf"
    SCRIPT="arch_udev"
    add_file /usr/lib/modprobe.d/usb-load-ehci-first.conf
    add_binary /lib/udev/udevd
    add_binary /usr/lib/udev/accelerometer
    add_binary /usr/lib/udev/ata_id
    add_binary /usr/lib/udev/cdrom_id
    add_binary /usr/lib/udev/collect
    add_file /usr/lib/udev/findkeyboards
    add_binary /usr/lib/udev/keymap
    add_file /usr/lib/udev/keyboard-force-release.sh
    add_binary /usr/lib/udev/mtd_probe
    add_binary /usr/lib/udev/scsi_id
    add_binary /usr/lib/udev/udev-acl
    add_binary /usr/lib/udev/v4l_id
    # add rule files
    for i in 42-qemu-usb 50-udev-default \
             60-cdrom_id 60-persistent-alsa 60-persistent-input 60-persistent-serial \
             60-persistent-storage-tape 60-persistent-storage 60-persistent-v4l \
             61-accelerometer 70-udev-acl 75-net-description 75-tty-description 75-probe_mtd 78-sound-card \
             80-drivers 95-keyboard-force-release 95-keymap 95-udev-late; do
    	     add_file /usr/lib/udev/rules.d/$i.rules
    done
    # add keymap files
    for i in /usr/lib/udev/keymaps/*; do
        [ -f $i ] && add_file "$i"
    done
    for i in /usr/lib/udev/keymaps/*/*; do
        [ -f $i ] && add_file "$i"
    done
}

help ()
{
cat <<HELPEOF
  This hook includes udevd and rule files.
HELPEOF
}
