#!/usr/bin/env bash
# Created by Tobias Powalowski <tpowa@archlinux.org>

build ()
{
    map add_file "/etc/archboot/defaults" "/usr/lib/archboot/functions" \
    "/usr/lib/archboot/container_functions" "/usr/bin/archboot-$(uname -m)-create-container.sh"
    add_file "/usr/bin/archboot-update-installer.sh" "/usr/bin/update-installer.sh"
}

help ()
{
cat<<HELPEOF
  This hook adds basic installer files on an archboot image.
HELPEOF
}
